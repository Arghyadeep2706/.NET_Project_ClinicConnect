@model ClinicConnect.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
    Layout = "_AdminLayout";
}

<h2>Delete Doctor</h2>

<h3>Are you sure you want to delete this doctor?</h3>
<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Doctor Name</dt>
        <dd class="col-sm-10">@Model.DoctorName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.DoctorEmail</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.DoctorPhoneNo</dd>
        <dt class="col-sm-2">Specialization</dt>
        <dd class="col-sm-10">@Model.Specialization</dd>
    </dl>

    <form asp-action="DeleteDoctor" method="post">
        <input type="hidden" name="id" value="@Model.DoctorId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="DoctorRegistration" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Message"]
    </div>
}

