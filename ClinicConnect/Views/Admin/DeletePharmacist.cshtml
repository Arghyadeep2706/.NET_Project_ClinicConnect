@model ClinicConnect.Models.Pharmacist

@{
    ViewData["Title"] = "Delete Pharmacist";
    Layout = "_AdminLayout";
}

<h2>Delete Pharmacist</h2>

<h3>Are you sure you want to delete this pharmacist?</h3>
<div>
    <h4>Pharmacist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Pharmacist Name</dt>
        <dd class="col-sm-10">@Model.PharmName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.PharmEmail</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PharmPhoneNo</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.PharmAddress</dd>
    </dl>

    <form asp-action="DeletePharmacist" method="post">
        <input type="hidden" name="id" value="@Model.PharmMemberId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="PharmacistRegistration" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Message"]
    </div>
}