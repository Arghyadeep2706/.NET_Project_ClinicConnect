@model ClinicConnect.Models.Admin
@{
    Layout = "_AdminLayout";
}
<h2>Reset Password</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="AdminEmail" />
    <div class="form-group">
        <label asp-for="UserPassword">New Password</label>
        <input asp-for="UserPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label for="conPassword">Confirm Password</label>
        <input type="password" id="conPassword" name="conPassword" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>