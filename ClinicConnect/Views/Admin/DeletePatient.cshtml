@model ClinicConnect.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
    Layout = "_AdminLayout";
}

<h2>Delete Patient</h2>

<h3>Are you sure you want to delete this patient?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Patient Name</dt>
        <dd class="col-sm-10">@Model.PatientName</dd>
        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.PatientAge</dd>
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.PatientGender</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.PatientEmail</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PatientPhoneNo</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.PatientAddress</dd>
    </dl>

    <form asp-action="DeletePatient" method="post">
        <input type="hidden" name="id" value="@Model.PatientId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="PatientRegistration" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Message"]
    </div>
}

