@model ClinicConnect.Models.Admin
@{
    Layout = "_AdminLayout";
}
<h2>Forgot Password</h2>

<form asp-action="ForgotPassword" method="post">
    <div class="form-group">
        <label asp-for="AdminEmail"></label>
        <input asp-for="AdminEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SecurityQuestion"></label>
        <select asp-for="SecurityQuestion" class="form-control">
            <option value="What is your favorite color?">What is your favorite color?</option>
            <option value="What is your school name?">What is your school name?</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SecurityAnswer"></label>
        <input asp-for="SecurityAnswer" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>